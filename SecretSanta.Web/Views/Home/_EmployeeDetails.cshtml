@model Employee
@{
    string ColMedSize = "12";
    string ColLgSize = "12";
    if (ViewBag.ShowColumns == true)
    {
        ColMedSize = "6";
        ColLgSize = "4";
    }
}
@if (Model is not null)
{
    <div class="col-lg-@ColLgSize col-md-@ColMedSize">
        <ul class="list-group mb-3">
            <li class="list-group-item d-flex justify-content-between lh-sm">
                <div>
                    <h6 class="text-muted">Id:&nbsp;</h6>
                    <h5 class="my-0">@Model.EmployeeNumber</h5>
                </div>
            </li>
            <li class="list-group-item d-flex justify-content-between lh-sm">
                <div>
                    <h6 class="text-muted">Name:&nbsp;</h6>
                    <h5 class="my-0">@Model.EmployeeName</h5>
                </div>
            </li>
            <li class="list-group-item d-flex justify-content-between lh-sm">
                <div>
                    <h6 class="text-muted">Organization:&nbsp;</h6>
                    <h5 class="my-0">@Model.EmployeeEntity</h5>
                </div>
            </li>
            <li class="list-group-item d-flex justify-content-between lh-sm">
                <div>
                    <h6 class="text-muted">Phone&nbsp;Number:&nbsp;</h6>
                    <h5 class="my-0">@Model.EmployeePhone</h5>
                </div>
            </li>
            <li class="list-group-item d-flex justify-content-between lh-sm">
                <div>
                    <h6 class="text-muted">Email:&nbsp;</h6>
                    <h5 class="my-0">@Model.EmployeeEmail</h5>
                </div>
            </li>
        </ul>
    </div>
}
@{
}
